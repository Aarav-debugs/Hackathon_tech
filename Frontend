<body>

<header>
  <h1>Affordable Housing Finder</h1>
</header>

<div class="container">

  <div class="search-box">
    <h2>Search Properties</h2>

    <input type="text" id="city" placeholder="City" />
    <input type="number" id="maxRent" placeholder="Max Rent" />
    <input type="number" id="bedrooms" placeholder="Bedrooms" />

    <select id="voucher">
      <option value="">Voucher Accepted?</option>
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>

    <button onclick="searchProperties()">Search</button>
  </div>

  <div class="results" id="results"></div>

  <div class="eligibility-box">
    <h2>Eligibility Check</h2>

    <input type="number" id="income" placeholder="Your Annual Income" />
    <input type="number" id="amiLimit" placeholder="AMI Limit" />

    <button onclick="checkEligibility()">Check Eligibility</button>

    <p id="eligibilityResult"></p>
  </div>

</div>

<script>
const API_BASE = "http://localhost:5000/api/properties";

async function searchProperties() {
  const city = document.getElementById("city").value;
  const maxRent = document.getElementById("maxRent").value;
  const bedrooms = document.getElementById("bedrooms").value;
  const voucher = document.getElementById("voucher").value;

  let query = `${API_BASE}?`;

  if (city) query += `city=${city}&`;
  if (maxRent) query += `maxRent=${maxRent}&`;
  if (bedrooms) query += `bedrooms=${bedrooms}&`;
  if (voucher !== "") query += `voucherAccepted=${voucher}&`;

  const response = await fetch(query);
  const data = await response.json();

  displayResults(data);
}

function displayResults(properties) {
  const resultsDiv = document.getElementById("results");
  resultsDiv.innerHTML = "";

  if (!properties.length) {
    resultsDiv.innerHTML = "<p>No properties found.</p>";
    return;
  }

  properties.forEach(property => {
    const card = document.createElement("div");
    card.className = "property-card";

    card.innerHTML = `
      <h3>${property.name}</h3>
      <p><strong>Address:</strong> ${property.address}, ${property.city}</p>
      <p><strong>Rent:</strong> $${property.rentMin} - $${property.rentMax}</p>
      <p><strong>Bedrooms:</strong> ${property.bedrooms}</p>
      <p><strong>AMI %:</strong> ${property.amiPercentage}%</p>
      <p><strong>Voucher Accepted:</strong> ${property.voucherAccepted ? "Yes" : "No"}</p>
    `;

    resultsDiv.appendChild(card);
  });
}

async function checkEligibility() {
  const income = document.getElementById("income").value;
  const amiLimit = document.getElementById("amiLimit").value;

  const response = await fetch(`${API_BASE}/eligibility`, {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      income: Number(income),
      amiLimit: Number(amiLimit)
    })
  });

  const data = await response.json();

  const result = document.getElementById("eligibilityResult");

  if (data.eligible) {
    result.textContent = "You are eligible!";
    result.className = "success";
  } else {
    result.textContent = "You are NOT eligible.";
    result.className = "fail";
  }
}
</script>

</body>
</html>
